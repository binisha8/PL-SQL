--PIVOT : CONVERTS ROWS INTO COLUMNS
--UNPIVOT : COLUMNS INTO ROWS

SELECT * FROM HR.EMPLOYEES;
SELECT *
FROM(
    SELECT DEPARTMENT_ID,JOB_ID,SALARY
    FROM HR.EMPLOYEES
)
PIVOT(
    SUM(SALARY)
    FOR JOB_ID IN('IT_PROG' AS IT_PROG,
                  'HR_REP' AS HR_REP,
                  'SA_REP' AS SA_REP
                 )
     )
ORDER BY DEPARTMENT_ID;

--UNPIVOT:COLUMNS INTO ROW
SELECT DEPARTMENT_ID,JOB_ID,SALARY
FROM(
    SELECT DEPARTMENT_ID,IT_PROG,HR_REP,SA_REP
    FROM DEPT
)
